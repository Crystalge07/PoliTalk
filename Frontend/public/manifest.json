{
  "manifest_version": 3,
  "name": "TikTok Bias Detector",
  "version": "1.0",
  "description": "Detect political bias in TikTok videos.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "*://www.instagram.com/*",
    "*://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.tiktok.com/*",
        "*://www.instagram.com/*",
        "*://www.youtube.com/*"
      ],
      "js": [
        "loader.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "assets/*",
        "sidebar.css",
        "logo.png"
      ],
      "matches": [
        "*://www.tiktok.com/*",
        "*://www.instagram.com/*",
        "*://www.youtube.com/*"
      ]
    }
  ]
}